from plugin_interface import Plugin
import math

class TrigonometryPlugin(Plugin):
    def get_name(self):
        return "Trigonometry Plugin"

    def get_commands(self):
        return {
            'sin': self.sin,
            'cos': self.cos,
            'tan': self.tan
        }

    def sin(self, arg):
        try:
            angle = float(arg)
            result = math.sin(math.radians(angle))
            print(f'Sine of {angle} degrees:', result)
        except ValueError:
            print('Invalid input. Please enter a valid angle.')

    def cos(self, arg):
        try:
            angle = float(arg)
            result = math.cos(math.radians(angle))
            print(f'Cosine of {angle} degrees:', result)
        except ValueError:
            print('Invalid input. Please enter a valid angle.')

    def tan(self, arg):
        try:
            angle = float(arg)
            result = math.tan(math.radians(angle))
            print(f'Tangent of {angle} degrees:', result)
        except ValueError:
            print('Invalid input. Please enter a valid angle.')
